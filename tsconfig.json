{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "downlevelIteration": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "es2019"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/tests/*"
  ],
  "allowJs": true,
}